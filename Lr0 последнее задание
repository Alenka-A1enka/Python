s = 0
for i in range(-1, 10):
    for j in range(2, 8):
        if i - j != 0:
            s += 1 / (i - j)
print(round(s, 3))

#необходимо найти минимальное значение разности между следующим элементом и предыдущим
print('Введите числа через пробел (в конце пробел ставить не нужно): ')
#считываем значения через пробел
mas = input().split(' ')
min = 1000
for i in range(1, len(mas)):
    #если разность между следующим элементом и предыдущим меньше минимальной
    if int(mas[i]) - int(mas[i - 1]) < min:
        min = int(mas[i]) - int(mas[i - 1]) #меняем значение минимальной разности
print(min)
