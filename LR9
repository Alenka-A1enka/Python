class Date(object):
    def __init__(self):
        #конструктор с начальными значениями
        self.hour = 0
        self.minute = 0
        self.second = 0
    def SetDate(self, h, m, s):
        #установка начального значения
        self.hour = h
        self.minute = m
        self.second = s
        #если значения больше, чем в стандартном времени возвращаем 
        if h > 23 or m > 59 or s > 59:
            print("Время установлено не было, произошла ошибка")
            return False
        else:
            print("Время успешно установлено")
            print("Новое время: " + str(h) + ":" + str(m) + ":" + str(s))
            print()
            return True
    def GetCurrentDate(self):
        #получение текущего времени
        print("Время: " + str(self.hour) + ":" + str(self.minute) + ":" + str(self.second))
        print()
    def ChangeHour(self, h):
        #выводим название операции
        if h > 0:
            print("Увеличение часа на " + str(h))
        else:
            print("Уменьшение часа на " + str(-h))
        #если время отнимается и оно больше, чем установленное возвращается false
        if self.hour < -h and h < 0:
            return False
        #изменяем время
        else:
            self.hour += h
            return True
    def ChangeMinute(self, m):
         #название операции
         if m > 0:
            print("Увеличение минут на " + str(m))
         else:
            print("Уменьшение минут на " + str(-m))
         #если время отнимается и оно больше, чем установленное возвращается false
         if self.minute < -m and m < 0:
            return False
         #изменяем время
         else:
            self.minute += m
            #если минут больше, чем 60 прибавляем часы
            if self.minute >= 60:
                kol = self.minute - 59
                self.hour += 1
                self.minute = kol
            return True
    def ChangeSecond(self, s):
         #название операции
         if s > 0:
            print("Увеличение секунд на " + str(s))
         else:
            print("Уменьшение секунд на " + str(-s))
         #если время отнимается и оно больше, чем установленное возвращается false
         if self.second < -s and s < 0:
            return False
         #изменяем время
         else:
            self.second += s
            #если секунд больше, чем 60 прибавляем минуты
            if self.second >= 60:
                kol = self.second - 59
                self.minute += 1
                self.second = kol
            return True
    def Responce(flag):
        #вывод информации об успешности завершения операции
        if flag == True:
            print("Операция прошла успешно")
        else:
            print("Произошла ошибка")

date = Date

flag = False
flagH = False
flagM = False
flagS = False
hour = 0
minute = 0
second = 0
while(flag == False):
    print('Установка времени')
    print('Количество часов: ')
    try:
        hour = int(input())
        flagH = True
    except:
        flagH = False
    print('Количество минут: ')
    try:
        minute = int(input())
        flagM = True
    except:
        flagM = False
    print('Количество секунд: ')
    try:
        second = int(input())
        flagS = True
    except:
        flags = False
    if flagH == True and flagM == True and flagS == True:
        flag = date.SetDate(date, hour, minute, second)
